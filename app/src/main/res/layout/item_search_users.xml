<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_search_img_user"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_insta_profile_thin"
        app:civ_border_color="@color/gray_border"
        app:civ_border_width="1dp"
        app:civ_circle_background_color="@color/gray_darker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_search_txt_name"
        style="@style/Theme.Instagram.TextViewBase"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="6dp"
        android:padding="1dp"
        android:text="@string/username"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/item_search_txt_username"
        app:layout_constraintStart_toEndOf="@id/item_search_img_user"
        app:layout_constraintTop_toTopOf="@id/item_search_img_user" />

    <TextView
        android:id="@+id/item_search_txt_username"
        style="@style/Theme.Instagram.TextViewBase"
        android:layout_marginStart="8dp"
        android:padding="1dp"
        android:text="@string/username"
        android:textColor="@color/gray_text"
        app:layout_constraintTop_toBottomOf="@id/item_search_txt_name"
        app:layout_constraintBottom_toBottomOf="@id/item_search_img_user"
        app:layout_constraintStart_toEndOf="@id/item_search_img_user" />
</androidx.constraintlayout.widget.ConstraintLayout>